
<!-- Navbar -->
<div class="container-fluid p-0">

  <!-- Section 1: Banner with title, and create trip form -->

    <!-- Desktop -->
    <div class="content-desktop">
      <div class="row">
        <div class="banner-landing-1" style="background-image: linear-gradient(rgba(10, 10, 10, 0.8), rgba(220, 220, 200, 0.1)), url('<%= image_path "landing_page/banner-1.jpg"%>'); ">

          <!-- 3 phrases in home page -->
          <h3 class="mt-3" id="motto">Fly above risk</h3>
          <h3 id="headline-banner-1">Get important and daily updated</h3><br>
          <h3 id="headline-banner-1">Covid-19 related travel info</h3>
          <p id="subheadline-banner-1"><strong>Where do you want to go?</strong></p>

          <!-- search form for creating a trip -->
          <div class="mt-3">
            <%= form_tag result_countries_path, method: :get do %>
              <div class="d-flex justify-content-center" id="home_search">

                <div class="d-flex align-items-center flex-grow mx-3 country_label">
                  <strong id="country_tag">ORIGIN</strong>
                  <div class="mx-3">
                    <%= collection_select(:country, :origin, Country.all, :id, :name, { selected: Country.find_by(name: "Italy").id}, {class: ' min-width-select select2'}) %>
                  </div>
                </div>

                <div class="d-flex align-items-center mx-3 country_label">
                  <div class="mx-3">
                    <%= collection_select(:country, :destination, Country.all, :id, :name, {selected: session[:create_trip_destination_id]}, {class: ' min-width-select select2'}) %>
                  </div>
                <strong id="country_tag">DESTINATION</strong>
                </div>

              </div>

              <div>
                <%= submit_tag "Search", class: "landing-page-button btn btn-falcony mr-5 mt-4" %>
              </div>

            <% end %>
          </div>

        </div>
      </div>
    </div>

    <!-- Mobile -->
    <div class="content-mobile">
      <div class="row">
        <div class="banner-landing-1-mobile" style="background-image: linear-gradient(rgba(10, 10, 10, 0.8), rgba(220, 220, 200, 0.1)), url('<%= image_path "landing_page/banner-1.jpg"%>'); ">
          <!-- Logo and login button -->
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to root_path, class: "navbar-brand" do %>
                <%= image_tag "logo/small_logo_white.svg", class: "logo_navbar_mobile" %>
              <% end %>
            </div>
            <% if user_signed_in? %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= cl_image_tag ('https://res.cloudinary.com/dybiixki8/image/upload/v1600063129/falcony/default_avatar_hlklvm.png'), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Settings", edit_user_registration_path(current_user), class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            <% else %>
              <div>
                <a class="btn btn-default btn-rounded" style="color: white;" data-toggle="modal" data-target="#modalLoginForm">Login</a>
              </div>
            <% end %>
          </div>
          <!-- phrase home page -->
          <div class="d-flex flex-column">
            <div class="flex-element-banner-m">
              <br>
              <h3 id="headline-banner-1m">Get important and daily updated Covid-19 related travel info</h3>
              <br>
              <br>
            </div>
            <hr>
            <div class="flex-element-banner-m">
              <p class="banner-text-white"><strong>Where do you want to go?</strong></p>
              <!-- search form for creating a trip -->

              <%= form_tag result_countries_path, method: :get do %>

                <div>
                  <p class="banner-text-white">Origin country</p>
                  <div>
                    <%= collection_select(:country, :origin, Country.all, :id, :name, { selected: Country.find_by(name: "Italy").id}, {class: 'min-width-select select2'}) %>
                  </div>
                </div>

                <div>
                  <p class="banner-text-white">Destination country</p>
                  <div>
                    <%= collection_select(:country, :destination, Country.all, :id, :name, {selected: session[:create_trip_destination_id]}, {class: 'min-width-select select2'}) %>
                  </div>
                </div>

                <div>
                  <%= submit_tag "Search", class: "landing-page-button-m btn btn-falcony mt-4" %>
                </div>

              <% end %>
            </div>
            <br>
            <br>
          </div>

        </div>
      </div>
    </div>

    <!-- Additional link to country index for mobile -->
    <div class="content-mobile" style="background-color: #505050; text-align: center;">
      <br>
