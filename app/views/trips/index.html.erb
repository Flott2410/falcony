<div class="container-fluid">
  <div class="row justify-content-center my-5">
    <div class="col-md-6">
      <h1 class="text-center">My trips</h1>

        <div class="d-flex align-items-center bg-white my-3 mx-1 px-3">
          <div class="flex-grow-1 p-2"> <strong>Trips</strong> </div>
          <%= link_to root_path do %>
            <div class="">
              <i class="far fa-plus-square"></i>
              <strong>New trip</strong>
            </div>
          <% end %>
        </div>

        <div class="trips-grid">
          <% @trips.each do |trip| %>
              <div class="card" style="width: 18rem;">
                <%= link_to trip_path(trip) do %>
                  <img src="..." class="card-img-top" alt="...">
                  <div class="card-body d-flex justify-content-around align-items-center">
                    <div class="flex-grow-1">
                      <p class="card-text"><%= trip.origin.name %> - <%= trip.destination.name %></p>
                    </div>
                    <div>
                      <%= link_to trip_path(trip), method: :delete, remote: :true do %>
                        <i class="far fa-trash-alt"></i>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
          <% end %>
        </div>

    </div>
  </div>
</div>
