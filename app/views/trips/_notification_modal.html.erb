<div class="modal fade" id="modalNotification" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Add SMS Notification</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <%= simple_form_for(@trip, as: :trip, method: :patch, url: get_notified_trip_path(@trip)) do |f| %>
          <div class="form-inputs">
           <%= f.input :new_daily_cases_threshold %>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <%= f.button :submit, "Notify me", class:"log-in-modal-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
