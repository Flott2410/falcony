<div class="container-fluid">
  




  <!-- Search bars to be added to Results Page -->

 <!--  Needs styling -->

 
  <div class"d-flex align-items-center">
    <%= form_tag result_countries_path, method: :get do %>
      <div class="d-flex id="results_search">
          <label class="country_label_black">ORIGIN</label>
          <div class="form-trip-input d-flex justify-content-center" ><%= collection_select(:country, :origin, Country.all, :id, :name, { selected: session[:create_trip_origin_id]}, {class: ' min-width-select select2'}) %></div>
          <label class="country_label_black">DESTINATION</label>
          <div class="form-trip-input class-input-medium d-flex justify-content-center"><%= collection_select(:country, :destination, @countries_wo_origin, :id, :name, {selected: session[:create_trip_destination_id]}, {class: ' min-width-select select2'}) %></div>
          <div class="text-center align-items-center">
            <%= submit_tag "Search", class: "form-trip-button btn btn-falcony" %>
          </div>
        </div>
    <% end %>
  </div>
  

  <!-- End of form -->









  <div class="wrapper">
  </div>

  <div class="card-summary">
    <img src="https://images.unsplash.com/photo-1558617015-8564d52a638f" />
    <div class="card-summary-infos">
      <h3>Travelling to <%= @destination.name %></h3>

      <!--  Open -->
      <p><strong>Open: </strong>
        <% if @destination_open.status == "Y" %>
          <span><%= "You can travel without limitations" %></span>
        <% elsif @destination_open.status == "N" %>
          <span><%= "You cannot travel to " %></span>%>
        <% elsif @destination_open.status == "WL" %>
          <span><%= "You can travel with limitations" %></span>

        <% end %>
      </p>

      <!--  High Risk Areas -->
      <p><strong>Risk areas: </strong>
        <% if @destination_high_risk_areas.status == "Y" %>
          <span><%= "All the country is under lockdown" %></span>
        <% elsif @destination_high_risk_areas.status == "N" %>
          <span><%= "There aren't risk areas under lockdown" %></span>
        <% elsif @destination_high_risk_areas.status == "WL" %>
          <span><%= "There are some risk areas under lockdown" %></span>
        <% end %>
      </p>

      <!--  Quarantine -->
      <p><strong>Quarantine: </strong>
        <% if @destination_quarantine.status == "Y" %>
          <span><%= "No quarantine needed" %></span>
        <% elsif @destination_quarantine.status == "N" %>
          <span><%= "Quarantine needed" %></span>
        <% elsif @destination_quarantine.status == "WL" %>
          <span><%= "Quarantine is requested in some circumstances" %></span>
        <% end %>
      </p>

      <!--  Test -->
      <p><strong>Test: </strong>
        <% if @destination_test.status == "Y" %>
          <span><%= "No test needed" %></span>
        <% elsif @destination_test.status == "N" %>
          <span><%= "You need a test to enter" %></span>
        <% elsif @destination_test.status == "WL" %>
          <span><%= "Test is requested in some circumstances" %></span>
        <% end %>
      </p>

    </div>
  </div>


