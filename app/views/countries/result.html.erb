        <% elsif @destination_restaurants.status == "WL" %>
          <span><%= "have some limitations" %></span>
          <!-- <button type="button" class="btn btn-lg btn-danger" data-toggle="popover" title="Limitations" data-content="<% @open.description %>" ></button> -->
        <% end %>
      </p>

      <p><strong>Bar: </strong>
        <% if @destination_bars_cafes.status == "Y" %>
          <span><%= "open" %></span>
        <% elsif @destination_bars_cafes.status == "N" %>
          <span><%= "closed" %></span>%>
        <% elsif @destination_bars_cafes.status == "WL" %>
          <span><%= "have some limitations" %></span>
          <!-- <button type="button" class="btn btn-lg btn-danger" data-toggle="popover" title="Limitations" data-content="<% @open.description %>" ></button> -->
        <% end %>
      </p>

      <!-- Cases -->
      <p>In the last day there have been <strong><%= @destination_new_cases %></strong> new cases</p>

    </div>
  </div>

